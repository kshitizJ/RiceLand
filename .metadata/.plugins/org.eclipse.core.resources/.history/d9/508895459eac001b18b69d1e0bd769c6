package com.servlet;

import java.io.IOException;
import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

import com.dao.ProductDao;
import com.db.DbConnect;
import com.detail.Product;

/**
 * Servlet implementation class ProductServlet
 */
@WebServlet("/ProductServlet")
public class ProductServlet extends HttpServlet {
	private static final long serialVersionUID = 1L;

	/**
	 * @see HttpServlet#doPost(HttpServletRequest request, HttpServletResponse
	 *      response)
	 */
	protected void doPost(HttpServletRequest request, HttpServletResponse response)
			throws ServletException, IOException {
		// TODO Auto-generated method stub

		String name = request.getParameter("name");
		String path = "assest/images/rice/" + request.getParameter("img");
		int price = Integer.parseInt(request.getParameter("price"));
		int star = Integer.parseInt(request.getParameter("star"));
		String description = request.getParameter("description");
		String category = request.getParameter("category");
		String status = request.getParameter("status");
		System.out.println(path);

		Product product = new Product(name, path, price, star, description, category, status);
		ProductDao productdao = new ProductDao(DbConnect.getCon());
		boolean flag = productdao.insertProduct(product);
		if (flag) {
			request.setAttribute("msg", "Successfully added the product...");
			response.sendRedirect("addProduct.jsp");
		} else {
			request.setAttribute("msg", "Failed to add the product, please try again...");
			response.sendRedirect("addProduct.jsp");
		}
	}

}
